 <!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css" type="text/css" />
    <link rel="stylesheet" asp-href-include="~/css/StyleSheet.css" />

</head>
<body>
    <nav class="mynav navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
        <div class="m-3">
            <i class="btnMenu bi bi-list" value="1"></i>
        </div>
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Hospital" asp-action="MainPage">Главная страница</a>
            <div class="navbar-collapse collapse  d-sm-inline-flex flex-sm-row-reverse">
                <ul class="myUl navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Hospital" asp-action="ShowAllPatient">Все пациенты</a>
                    </li>
                </ul>
            </div>
            <div class="p-2 row">
                <div class="col-2">
                    <a class="btn btn-primary" asp-action="Logout" asp-controller="Account">Выход</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        @if(TempData["message"] != null)
        {
            <div class="alert alert-info text-center">@TempData["message"]</div>
        }
        @RenderBody()
    </div>

    <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/JavaScript.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
