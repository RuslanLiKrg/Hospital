@model VisitHistory
@{ 
    ViewBag.Title = "Удаление посещения";
}

<div class="border border-1 text-center">
    <h3 class="text-warning text-uppercase">Внимание! Вы собиратесь удалить следующую запись</h3>
    <dl class="list-group-horizontal-lg">
        <dt>Пациент</dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.Surname)
            @Html.DisplayFor(model => model.Patient.Name)
            @Html.DisplayFor(model => model.Patient.Patronymic)
        </dd>
        <dt>Дата</dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        
    </dl>
    <div>
        <form asp-action="Delete" method="post" asp-route-id="@Model.Id">
            <div class="form-check">
                <input type="submit" class="btn btn-danger" value="Удалить" />
                <a asp-action="MainPage" class="btn btn-primary">Отмена</a>
            </div>
        </form>
    </div>
</div>