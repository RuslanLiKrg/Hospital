@model RegisterViewModel
<h2 class="text-center">Регистрация нового пользователя</h2>
<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-check">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-check">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-check">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-check">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check">
        <label asp-for="PasswordConfirm"></label>
        <input asp-for="PasswordConfirm"  type="password" class="form-control" />
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>
    <div class="form-check mt-2">
        <input type="submit" class="btn btn-primary" value="Регистрация" />
        <a asp-action="Login" class="btn btn-warning">Отмена</a>
    </div>
</form>