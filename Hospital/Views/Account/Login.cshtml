@model LoginModel
@{ 
    Layout = "LayoutAccount.cshtml";
    ViewBag.Title = "Log In";

}

<div class="text-danger" asp-validation-summary="All">
    <h2 class="text-center">Авторизация</h2>
</div>

<form asp-action="Login" asp-controller="Account" method="post" class="m-3">
    <input type="hidden" asp-for="ReturnURL" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <button class="btn btn-primary" type="submit">Войти</button>
    </div>
    <div>
        <span>Нет аккаунта? <a asp-action="Register" class="link-info">Зарегистрируйтесь!</a></span>
    </div>
</form>